#!/usr/bin/env ruby
require 'pry'

require_relative '../config/environment'

puts "Hello and welcome to TicTacToe"
puts "How many players would like to participate? (0-2)"

num_players = ""
while num_players != "0" || num_players != "1" || num_players != 2
  num_players = gets.strip!
end
binding.pry

if num_players == "1"
  puts "Do you want to go first? (y/n)"
  first = ""
  while first != "y" || first != "n"
    first = gets.strip!
  end
end

game = Game.new